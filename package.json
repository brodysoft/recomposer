{
  "name": "recomposer",
  "version": "0.2.5",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "repository": "git@github.com:suguru03/recomposer.git",
  "author": "Suguru Motegi <suguru.motegi@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "rm -rf build && tsc -p tsconfig.build.json && npm run prettier",
    "test": "jest",
    "prettier": "prettier --write ./**/*.{ts,tsx}",
    "precommit": "lint-staged & npm run build"
  },
  "peerDependencies": {
    "react": "^0.14.0 || ^15.0.0 || ^16.0.0",
    "recompose": "^0.27.1"
  },
  "devDependencies": {
    "@types/enzyme": "^3.10.8",
    "@types/jest": "^26.0.20",
    "@types/react": "~16.4.18",
    "@types/react-dom": "^16.9.10",
    "@types/recompose": "^0.30.7",
    "@types/sinon": "^9.0.10",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "husky": "^0.14.3",
    "jest": "^26.6.3",
    "lint-staged": "^7.1.3",
    "prettier": "^1.13.4",
    "react": "~16.12.0",
    "react-dom": "~16.12.0",
    "recompose": "^0.30.0",
    "sinon": "^9.2.4",
    "ts-jest": "^26.5.0",
    "tslint": "^5.10.0",
    "tslint-react": "^3.6.0",
    "typescript": "^4.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/*.tsx"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/__tests__/jest.setup.ts"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "lint-staged": {
    "*.tsx": [
      "prettier --write",
      "git add"
    ]
  }
}
